+
+  if (pciefw_connect_if_unconnected(mmio->state) == -1) return (uint64_t)-1;
+
+  err = pciefw_send_read_mem(mmio->state, mmio->bar, addr, width, &data);
+  return err ? (uint64_t)-1 : data;
