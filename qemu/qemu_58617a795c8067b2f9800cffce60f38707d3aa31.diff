+  msg->width = (uint8_t)width;
+  msg->addr = (uint64_t)addr;
+  msg->size = (uint16_t)width;
+  *(uint64_t*)msg->data = data;
+
+  if (pciefw_send_msg(state, msg)) { PERROR(); return -1; }
+
+  return 0;
+}
